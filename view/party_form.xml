<data>
    <xpath
        expr="/form/notebook/page[@id='general']/field[@name='addresses']"
        position="before">
        <separator string="VAT" colspan="4" id="vat"/>
        <label name="vat_number"/>
        <field name="vat_number"/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='general']/label[@name='vat_number']"
        position="before">
        <label name="type_document"/>
        <field name="type_document"/>
        <newline/>
    </xpath>

    <xpath
        expr="/form/field[@name='code']"
        position="after">
        <newline/>
        <label name="commercial_name"/>
        <field name="commercial_name"/>
        <newline/>
        <field name="supplier" invisible="1"/>
        <field name="customer" invisible="1"/>
        <newline/>
    </xpath>

    <xpath
        expr="/form/notebook/page[@name='identifiers']"
        position="replace">
    </xpath>
</data>
