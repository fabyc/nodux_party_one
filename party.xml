<tryton>
    <data>
        <!--record model="ir.property" id="property_party_lang">
            <field name="field"
                search="[('model.model', '=', 'party.configuration'), ('name', '=', 'party_lang')]"/>
            <field name="value" eval="'ir.lang,' + str(ref('ir.lang_ec'))"/>
        </record-->

        <record model="ir.ui.view" id="party_view_tree">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="name">party_tree</field>
        </record>

        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="name">party_form</field>
        </record>

        <!--Supplier and customer-->
        <record model="ir.action.act_window" id="act_customer_form">
            <field name="name">Customer</field>
            <field name="res_model">party.party</field>
            <field name="search_value"></field>
        </record>

        <record model="ir.action.act_window.view" id="act_customer_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="party_view_tree"/>
            <field name="act_window" ref="act_customer_form"/>
        </record>

        <record model="ir.action.act_window.domain" id="act_customer_form_domain_all">
            <field name="name">Customer</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('customer', '=', True)]" pyson="1"/>
            <field name="act_window" ref="act_customer_form"/>
        </record>

        <menuitem name="Customer" parent="party.menu_party_form" id="menu_customer"
           sequence="1" icon="tryton-list" action="act_customer_form"/>


        <record model="ir.action.act_window" id="act_supplier_form">
            <field name="name">Supplier</field>
            <field name="res_model">party.party</field>
            <field name="search_value"></field>
        </record>

        <record model="ir.action.act_window.view" id="act_supplier_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="party_view_tree"/>
            <field name="act_window" ref="act_supplier_form"/>
        </record>

        <record model="ir.action.act_window.domain" id="act_supplier_form_domain_all">
           <field name="name">Supplier</field>
           <field name="sequence" eval="10"/>
           <field name="domain" eval="[('supplier', '=', True)]" pyson="1"/>
           <field name="act_window" ref="act_supplier_form"/>
        </record>

       <menuitem name="Supplier" parent="party.menu_party_form" id="menu_supplier"
           sequence="2" icon="tryton-list" action="act_supplier_form"/>

    </data>
</tryton>
